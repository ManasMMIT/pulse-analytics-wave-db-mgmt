<mj-section mj-class='no-padding alert-item-details {% if lastIndication and loop.last %}alert-item-last{% endif %}'>
  <mj-column mj-class='no-padding'>
    <mj-text mj-class='alert-item-row bold-text'>
      {{ item.regimen }}
    </mj-text>
  </mj-column>
</mj-section>
{% if loop.last != true %}
  <mj-section mj-class='alert-bottom-divider'>
    <mj-column mj-class='no-padding'>
        <mj-divider mj-class='section-divider no-padding' />
    </mj-column>
  </mj-section>
{% endif %}
